<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/mail_cont"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/imgIdentifier"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/spam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/titleTxt"
        app:layout_constraintStart_toEndOf="@id/imgIdentifier"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="Email tittle"/>
    <TextView
        android:id="@+id/bodyTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgIdentifier"
        app:layout_constraintTop_toBottomOf="@+id/titleTxt"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@id/imgIdentifier"
        android:textSize="12sp"
        android:text="Hello this is an mail and not a femail so this gotta be racist why its not called femail..."/>
</androidx.constraintlayout.widget.ConstraintLayout>